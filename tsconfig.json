{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "dist/src",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}